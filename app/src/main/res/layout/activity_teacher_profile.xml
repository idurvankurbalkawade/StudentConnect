<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeacherProfile"
    android:background="@color/lightgrey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#5CC09F"
            >
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/profileImage"
                android:layout_centerInParent="true"
                android:src="@drawable/profile"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/welcome_user"
                android:layout_below="@id/profileImage"
                android:hint="Welcome"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/white"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:layout_margin="15dp"
            android:background="@color/white"
            >

            <!-- Full Name Details -->

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/ic_profile"
                android:background="@drawable/ic_baseline_account_circle_24"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_full_name"
                android:layout_alignStart="@id/ic_profile"
                android:hint="Full Name"
                android:layout_marginStart="50dp"
                android:textSize="18sp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/txt_full_name"
                android:background="@android:color/darker_gray"
                android:id="@+id/divider1"
                />

            <!-- Email Details-->

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/ic_email"
                android:background="@drawable/email"
                android:layout_below="@id/divider1"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_email"
                android:layout_alignStart="@id/ic_email"
                android:hint="Email ID"
                android:layout_marginStart="50dp"
                android:layout_below="@id/divider1"
                android:layout_marginTop="20dp"
                android:textSize="18sp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/txt_email"
                android:background="@android:color/darker_gray"
                android:id="@+id/divider2"
                />

            <!-- Class Details-->

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/ic_class"
                android:background="@drawable/subject_icon"
                android:layout_below="@id/divider2"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="4dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_class"
                android:layout_alignStart="@id/ic_class"
                android:hint="Class"
                android:layout_marginStart="50dp"
                android:layout_below="@id/divider2"
                android:layout_marginTop="20dp"
                android:textSize="18sp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/txt_class"
                android:background="@android:color/darker_gray"
                android:id="@+id/divider3"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider3"
                android:text="Change Profile"
                android:id="@+id/btnChangeProfile"
                android:layout_marginTop="30dp"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider3"
                android:text="Forgot Password"
                android:id="@+id/btnForgotPassword"
                android:layout_marginTop="80dp"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/backBtn"
                android:onClick="backBtn"
                android:layout_below="@id/btnForgotPassword"
                android:text="Back to Dashboard"
                />

        </RelativeLayout>
    </LinearLayout>

</ScrollView>